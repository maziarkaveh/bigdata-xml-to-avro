| num_employees = 80,000 (2013)&lt;ref&gt;{{cite web|url=http://www.apple.com/about/job-creation/ |title=Apple's Jobs creation |publisher=Apple.com |date=2012-10-31 |accessdate=2012-11-11}}&lt;/ref&gt;
| subsid = {{#property:p199}}
